# Production environment (docker-compose --profile prod)
# Copy to .env.docker.prod and fill in real values

COMPOSE_PROJECT_NAME=cronicorn
DB_PORT=5432
POSTGRES_USER=cronicorn_user
POSTGRES_PASSWORD=CHANGEME
POSTGRES_DB=cronicorn
DATABASE_URL=postgresql://cronicorn_user:CHANGEME@db:5432/cronicorn

# Application secrets
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
AUTH_SECRET=your_auth_secret_min_32_chars
CRONICORN_API_URL=https://your-domain.com

# AI Configuration
OPENAI_API_KEY=your_openai_api_key
AI_MODEL=gpt-4o-mini
NODE_ENV=production
