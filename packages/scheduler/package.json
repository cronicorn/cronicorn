{
  "name": "@cronicorn/scheduler",
  "type": "module",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "!dist/**/*.test.*",
    "!dist/adapters/**",
    "!dist/sim/**",
    "dist"
  ],
  "scripts": {
    "watch": "tsc -w ",
    "build": "tsc ",
    "test": "vitest run && pnpm sim",
    "typecheck": "tsc --noEmit",
    "sim": "tsx src/sim/simulate.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --max-warnings 0 --fix"
  }
}
