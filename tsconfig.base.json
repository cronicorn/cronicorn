{
  "compilerOptions": {
    // ESM in Node â€” matches runtime behavior
    "target": "ES2022",
    // Paths/aliases for the monorepo (adjust as you add packages)
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@cronicorn/config-eslint/*": [
        "packages/config-eslint/src/*"
      ],
      "@cronicorn/feature-ai-vercel-sdk/*": [
        "packages/feature-ai-vercel-sdk/src/*"
      ],
      "@cronicorn/scheduler/*": [
        "packages/scheduler/src/*"
      ]
    },
    // Useful extras
    "resolveJsonModule": true,
    // Node types available for Pool, process.env, etc.
    "types": [
      "node"
    ],
    // Strict, modern TS
    "strict": true,
    // Declarations for libs you might publish (packages override outDir)
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false, // keep ESM semantics tidy
    "forceConsistentCasingInFileNames": true,
    // Keep `import`/`export` as written (no downleveling),
    // and make TS respect your explicit .js extensions.
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  }
}