# All variables are optional - the app has working defaults
# Copy this file to .env and uncomment what you want to customize

# Docker Compose
COMPOSE_PROJECT_NAME=cronicorn-dev
DB_PORT=6666
DB_RESTART=unless-stopped

# Database Container (used by postgres container)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=db

# Database Connection (for local dev - points to Docker DB on localhost:6666)
DATABASE_URL=postgresql://user:password@localhost:6666/db

# Better Auth (required for API)
# Generate secret with: openssl rand -base64 32
BETTER_AUTH_SECRET=dev-secret-key-must-be-at-least-32-characters-long
BETTER_AUTH_URL=http://localhost:3333/api/auth
WEB_URL=http://localhost:5173
API_URL=http://localhost:3333

# GitHub OAuth (required for authentication)
# Create at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_oauth_app_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_client_secret

# Server
PORT=3333
NODE_ENV=development

# AI Scheduler (optional - leave blank to disable AI features)
# Get your key at: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-your_openai_api_key_here
# AI_MODEL=gpt-4o-mini
