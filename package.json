{
  "name": "cronicorn",
  "packageManager": "pnpm@10.17.1",
  "author": "",
  "type": "module",
  "license": "ISC",
  "keywords": [],
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "ðŸš€ ---------- MONOREPO ----------": "",
    "watch": "dotenv -e .env -- pnpm run --stream -r --parallel watch",
    "build": "dotenv -e .env -- turbo run build",
    "start": "dotenv -e .env -- turbo run start --env-mode=loose",
    "dev": "dotenv -e .env -- turbo run dev --env-mode=loose",
    "ðŸš€ ---------- QUALITY ----------": "",
    "test": "pnpm run -r --parallel test",
    "test:coverage": "pnpm run -r --parallel test:coverage",
    "lint": "pnpm run -r --parallel lint",
    "lint:fix": "pnpm run -r --parallel lint:fix",
    "typecheck": "pnpm run -r --parallel typecheck",
    "ðŸš€ ---------- VERSIONING ----------": "",
    "bump": "changeset",
    "release": "changeset version",
    "ðŸš€ ---------- UTILS ----------": "",
    "clean": "pnpm run -r --parallel clean && rm -rf node_modules",
    "ðŸš€ ---------- DATABASE ----------": "",
    "push": "dotenv -e .env -- pnpm run -r --parallel push",
    "migrate": "dotenv -e .env -- pnpm run -r --parallel migrate",
    "generate": "dotenv -e .env -- pnpm run -r --parallel generate",
    "studio": "dotenv -e .env -- pnpm run -r --parallel studio",
    "ðŸš€ ---------- SCENARIOS ----------": "",
    "scenarios": "dotenv -e .env -- pnpm --filter @cronicorn/scenarios scenarios",
    "ðŸš€ ---------- PROD ----------": "",
    "prod": "docker compose -p \"cronicorn\" --env-file .env.production -f ./docker-compose-prod.yml up -d --build --remove-orphans"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@cronicorn/config-eslint": "workspace:*",
    "@types/node": "24",
    "@vitest/coverage-v8": "~3.2.4",
    "dotenv-cli": "^10.0.0",
    "eslint": "~9.31.0",
    "eslint-plugin-format": "~0.1.3",
    "tsx": "^4.20.5",
    "turbo": "^2.5.8",
    "typescript": "~5.7.2",
    "vitest": "~3.2.4"
  }
}
