  "keywords": [],
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "ðŸš€ ---------- MONOREPO ----------": "",
    "build": "tsc -b",
    "start": "dotenv -e .env -- pnpm run -r --parallel start",
    "watch": "dotenv -e .env -- tsc -b -w",
    "ðŸš€ ---------- QUALITY ----------": "",
    "test": "dotenv -e .env.test vitest run",
    "test:coverage": "dotenv -e .env.test vitest run --coverage",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "typecheck": "tsc -b --noEmit",
    "ðŸš€ ---------- VERSIONING ----------": "",
    "bump": "changeset",
    "release": "changeset version",
    "ðŸš€ ---------- UTILS ----------": "",
    "clean": "pnpm -r exec rimraf dist coverage node_modules tsconfig.tsbuildinfo && rimraf node_modules .eslintcache",
    "ðŸš€ ---------- DATABASE ----------": "",
    "push": "dotenv -e .env -- pnpm run -r --parallel push",
    "migrate": "dotenv -e .env -- pnpm run -r --parallel migrate",
    "generate": "dotenv -e .env -- pnpm run -r --parallel generate",
    "studio": "dotenv -e .env -- pnpm run -r --parallel studio",
    "ðŸš€ ---------- SCENARIOS ----------": "",
    "scenarios": "dotenv -e .env -- pnpm --filter @cronicorn/scenarios scenarios",
    "ðŸš€ ---------- PROD ----------": "",
    "prod": "docker compose -p \"cronicorn\" --env-file .env.production -f ./docker-compose-prod.yml up -d --build --remove-orphans"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
