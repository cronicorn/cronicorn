    "eslint": "~9.31.0",
    "eslint-plugin-format": "~0.1.3",
    "tsx": "^4.20.5",
    "typescript": "~5.7.2",
    "vitest": "~3.2.4",
    "rimraf": "^6.0.1"
  }
}
