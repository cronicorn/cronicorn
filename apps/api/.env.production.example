# Production Environment Variables

# Database
DATABASE_URL=postgresql://user:password@prod-db-host:5432/cronicorn

# Server
PORT=3000
NODE_ENV=production

# Better Auth
BETTER_AUTH_SECRET=your-production-secret-key-min-32-chars-use-strong-random
BETTER_AUTH_URL=https://api.yourdomain.com
WEB_URL=https://yourdomain.com

# API
API_URL=https://api.yourdomain.com

# GitHub OAuth (register callback URL: https://api.yourdomain.com/api/auth/callback/github)
GITHUB_CLIENT_ID=your-production-github-client-id
GITHUB_CLIENT_SECRET=your-production-github-client-secret
